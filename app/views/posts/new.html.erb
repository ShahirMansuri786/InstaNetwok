<html lang="en">
  <head>
    <style>
      .box:hover{
        box-shadow: 10px 10px 20px 10px grey ;
        border-radius:10px;}
      .box{
        position: relative;
        top:58px;
        left:214px;}
    </style> 
  </head>
  <body>
    <div style="width:865px;" , class="box " >
      <div  class="container , bg-body-secondary">
        <div style="margin-left:94%">
          <%= link_to 'Back', posts_path, class:"btn btn-outline-success" %>
        </div>
        <%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
        <div class="form-group , mt-5">
        <%= form.label :post_images, 'Upload Image' %>
        <div class="mt-3">
          <%= form.file_field :post_images, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group , mt-3">
        <%= form.label :caption, 'Caption' %>
        <div class="mt-3">
          <%= form.text_area :caption, class: 'form-control', rows: 3 %>
        </div>
      </div>

      <div class="form-group mt-4 , text-center">
        <%= form.submit 'Create Post', class:"btn btn-outline-success" %>
      </div>
      <% end %>
      </div>
    </div>
  </body>
</html>
