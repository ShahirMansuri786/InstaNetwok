<!-- app/views/image_posts/show.html.erb -->


<div style="margin-left:50%"><%= link_to 'Delete Post', post_path(@post), data: {  
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"} ,  class: 'btn btn-secondary'  %>

<%= link_to 'see all post', posts_path, class: 'btn btn-secondary' %></div>


<div class="container col-8">
<div class="row">

<div class="card mb-3">

<div>
<% if user_signed_in? %>
<%= current_user%>
</div>
<% end %> 
<% if @post.post_images.present? && @post.id.present? %>
<p><%= User.find_by(id:(@post.user_id)).name %></p>
<%= image_tag (@post.post_images.first.attachments.first  if @post.post_images.attached?) , style:" max-width: 100%;" %>

<div class="mt-3">
<p><%= @post.caption %></p>
<div>
<button class="btn btn-outline-success"> Likes </button>
<button class="btn btn-outline-success"> <%= @post.likes.count%></button>
 <div><%=render "posts/allcomment" , post: @post %></div> 
 <div style="margin-left:93.5%"><%= link_to 'Back', posts_path, class:"btn btn-outline-success" %></div>


<% else %><div class="form-group mt-4 , text-center">
    <%= form.submit 'Create Post', class: 'btn btn-dark' %>
  </div>
<p>There is no post available</p>
<% end %>

</div>
  
 
    </div>
</div>
</div>
</div>



