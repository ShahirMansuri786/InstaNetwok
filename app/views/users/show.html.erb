
<html>
<head>
<style>
.C{
  position:relative;
  top:70px;
  width:800px;
  margin-left:237px;
}

</style>
</head>
<body>
<div class="C bg-white">

<div class="p-3">
<%= image_tag url_for(UserProfile.find_by(user_id: @user.id).profile_image) ,style:"width:100px; height:100px ; border-radius:180px " if UserProfile.find_by(user_id: @user.id).profile_image.attached? %> 
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">User_name</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.user_name %></td>
     
    </tr>
  </tbody>
</table>

<div class="row p-4">
<% @user_post.each do |user_post| %>
<div class="card" style="width: 16rem;">

<% if user_post.post_images.attached? %>
 <%= image_tag main_app.rails_blob_url(user_post&.post_images&.attachments&.first) , class:"card-img-top"  if user_post.post_images.attached? %>
  <div class="card-body">
    
  <p>Likes:- <%= user_post.likes.count %>  </p>
  <p>Comments:- <%= user_post.comments.count %> </p>
   
  <p class="card-text"><%= user_post.caption %></p>
    
  
       
   
    
  </div>
<% end %>
  </div>

<% end %>
</div>

</div>
</body>
</html>