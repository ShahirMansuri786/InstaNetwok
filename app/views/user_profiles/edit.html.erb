<html >
  <head>
    <style>
      .box:hover{
        box-shadow: 10px 10px 20px 10px grey ;
        border-radius:10px;}
    </style> 
  </head>
<body>
  <div style="width:1300px" class="box , container" >
    <div style="margin-top:8%" class="container , bg-body-secondary">
      <div style="margin-left:95.5%">
        <%= link_to 'Back', posts_path, class:"btn btn-outline-success" %>
      </div>
      <%= form_with(url: user_profile_path(@user_profile) , method: :put) do |form| %>
      <div class="form-group , mt-5">
        <%= form.label :profile_image, 'Upload Image' %>
          <div class="mt-3"> 
            <%= form.file_field :profile_image, class: 'form-control' %>
          </div>
      </div>
      <div class="form-group mt-4 , text-center">
        <%= form.submit 'Upload profile', class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</body>
</html>