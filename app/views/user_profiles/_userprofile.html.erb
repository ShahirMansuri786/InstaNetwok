<html>
  <head>
  </head>
  <body>
    <div class="card" , style="height:700px ; width:215px ; background-color:white;">
      <div style="text-align:center ; margin-top:30px">
        <div>
          <% if UserProfile.find_by(user_id:current_user.id).present? %> 
            <% if (UserProfile.find_by(user_id:current_user).profile_image.present?) %>
            <%= image_tag (UserProfile.find_by(user_id:current_user).profile_image&.attachments&.first  if UserProfile.find_by(user_id:current_user).profile_image.attached? ) , style:"width:100px; height:100px ; border-radius:180px " %> 
            <% end %>
          <% else %>
            <%= link_to "Upload profile" , new_user_profile_path %>
          <% end %>
        </div>
        <div class="mt-3" >
          <table class="table table-bordered"  >
            <tbody>
              <tr>
                <td>Name</td>
                <td>
                  <%= current_user.name %>
                  <%= link_to "Edit", user_edit_path(current_user.id), class: "btn btn-outline-success", style: "width:60px; height:28px" %>
                </td>
              </tr>
              <tr>
                <td>User Name</td>
                <td><%= current_user.user_name %></td>
              </tr>
              <% if UserInfo.find_by(user_id: current_user.id).present? %>
                <tr>
                  <td>Bio</td>
                  <td>
                    <%= current_user.user_info.bio %>
                    <%= link_to "Edit", edit_user_info_path(current_user.user_info.id), class: "btn btn-outline-success", style: "width:60px; height:28px" %>
                  </td>
                </tr>
              <% else %>
                <tr>
                  <td colspan="2">
                    <%= link_to "Create Bio", new_user_info_path, class: "btn btn-outline-success", style: "width:60px; height:28px" %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td>Followers</td>
                <td>
                  <%= current_user.followers.count %>
                  <%= link_to "See", user_followed_users_path, class: "btn btn-outline-success", style: "width:60px; height:28px" %>
                </td>
              </tr>
              <tr>
                <td>Followed</td>
                <td>
                  <%= current_user.following.count %>
                  <%= link_to "See", user_follower_users_path, class: "btn btn-outline-success", style: "width:60px; height:28px" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>  
    </div>
  </body>
</html>
